@model IEnumerable<LosSimson.Models.Temporadum>
@{
    ViewData["Title"] = "Temporadas";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="~/estilos/estilos.css" rel="stylesheet" />
</head>
<body>
    <form>
        <header>
            <h1><a href="/">LOS SIMPSON - GUIA DE EPISODIOS</a></h1>
            <h2>The Simpsons</h2>
        </header>
        <main>
            <h1>Lista de Temporadas</h1>
            <ul>
                @foreach (var item in Model)
                {
                    <li><a href="~/Episodios/@(item.Id)">Temporada @(item.Numero)</a></li>
                }
            </ul>
        </main>
    </form>
</body>
</html>
